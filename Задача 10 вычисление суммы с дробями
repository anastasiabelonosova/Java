/*  Вычислить сумму 1+1/2+1/3+...+1/n
*/

import java.util.*;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
      
      Scanner sc=new Scanner(System.in);
      
      double number=sc.nextInt();
      double sum=0;
      
      for (double i=1;i<=number;i++){
       
         sum=sum+(1/i);
      }
      System.out.println("Сумма = "+sum);
  }
}
